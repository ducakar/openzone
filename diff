   void SimpleAudio::update()
   {
+    int ( &samples )[ObjectClass::AUDIO_SAMPLES] = object->type->audioSamples;
+
+    if( ( object->flags & Object::HIT_BIT ) && samples[SND_HIT] >= 0 ) {
+      playSoundEvent( samples[SND_HIT] );
+    }
