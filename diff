@@ -392,6 +402,22 @@ namespace oz
         return r;
       }
 
+      String trim() const
+      {
+        char *start = buffer;
+        char *end = buffer + count;
+
+        while( start < end && ( *start == ' ' || *start == '\t' || *start == '\n' ) ) {
+          start++;
+        }
+        do {
+          end--;
+        }
+        while( start < end && ( *end == ' ' || *end == '\t' || *end == '\n' ) );
+
+        return String( start, end - start );
+      }
+
