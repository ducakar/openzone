pkgbase=openzone
# pkgname=('liboz' 'openzone' 'openzone-data' 'openzone-doc')
pkgname=('openzone' 'openzone-data')
pkgver=0.3.0
pkgrel=1
url="http://github.com/ducakar/openzone/"
license=('GPL3')
arch=('i686' 'x86_64')
makedepends=('cmake' 'doxygen' 'faad2' 'freeimage' 'gcc' 'git' 'graphviz'
             'libmad' 'libvorbis' 'lua' 'openal' 'physfs' 'sdl_ttf')
source=("https://github.com/ducakar/openzone/tarball/v${pkgver}"
        "https://openzone.googlecode.com/files/openzone-data-${pkgver}.tar.xz")
sha1sums=()

build()
{
  mkdir -p ${srcdir}/build && cd ${srcdir}/build

   cmake \
     -D CMAKE_BUILD_TYPE=Release \
     -D CMAKE_INSTALL_PREFIX=/usr \
     -D OZ_SHARED_LIBOZ=0 \
     -D OZ_NONFREE=1 \
     ../openzone

  make doc
  make
}

